<div class="container-fluid welcome-body">
  <div class="welcome-container">
    <h2>Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, "*Email" %><br/>
      <%= f.email_field :email, autofocus: true %>
    </div>


    <div class="field">
      <%= f.label :fname, "*First Name"%><br/>
      <%= f.text_field :fname%>
    </div>

    <div class="field">
      <%= f.label :lname, "*Last Name" %><br/>
      <%= f.text_field :lname %>
    </div>

    <!-- <div class="field">
      <%#= label_tag(:user_cohort_id, "*Cohort") %><br>
      <%#= collection_select(:user, :cohort_id, @cohorts, :id, :name, { prompt: "Please Select One" } ) %>
    </div> -->

    <div class="field">
      <%= f.label :password,"*Password" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>
        characters minimum)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "off", placeholder: "8 characters minimum" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
    <% end %>

    <%#= render "devise/shared/links" %>

  </div>
</div>
